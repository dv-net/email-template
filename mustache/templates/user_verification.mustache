{{> head}}
<body style="margin: 0; padding: 0; min-width: 100%; background-color: #f7f7f7">
    <center style="width: 100%; background-color: #f7f7f7; padding: 0">
        <div style="max-width: 600px; background-color: #f7f7f7">
            <table border="0" cellpadding="0" cellspacing="0" role="presentation"
                style="background-color: #f7f7f7; color: #000000; margin: 0; padding: 0; max-width: 600px; width: 100%; font-family: &quot;Roboto&quot;, Arial, sans-serif, Helvetica;">
                {{> header}}
                <tr>
                    <td>
                        <center>
                            <table border="0" cellpadding="0" cellspacing="0" role="presentation"
                                style="max-width: 600px; width: 100%">
                                <tr>
                                    <td>
                                        <table border="0" cellpadding="0" cellspacing="0" role="presentation"
                                            style="width: 100%">
                                            <tr>
                                                <td style="background-color: #fff; border-radius: 12px; padding: 24px">
                                                    <table border="0" cellpadding="0" cellspacing="0"
                                                        role="presentation" style="width: 100%">
                                                        <tr>
                                                            <td
                                                                style="border-radius: 12px; background-color: #F7F9FB; height: 180px; width: 100%; text-align: center">
                                                                <img src="https://cdn.dv.net/img/emailVerification.png"
                                                                    alt="Mail" />
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td style="padding: 24px 0 0">
                                                                <h1
                                                                    style="padding: 0; margin: 0; font-family: Roboto; font-size: 32px; font-weight: 700; line-height: 40px; color: #303345;">
                                                                    {{verificationTitle}}
                                                                </h1>
                                                                <p
                                                                    style="color: #303345; padding: 20px 0 16px; margin: 0; font-family: Roboto; font-size: 14px; font-weight: 400; line-height: 22px;">
                                                                    {{defaultGreeting}}!
                                                                </p>
                                                                <p
                                                                    style="color: #303345; padding: 0; margin: 0; font-family: Roboto; font-size: 14px; font-weight: 400; line-height: 22px;">
                                                                    {{verificationText}}.
                                                                </p>
                                                                <p
                                                                    style="border-radius: 12px; border: 1px solid #E1E8F1; background-color: #F7F9FB; padding: 16px; margin: 16px 0 12px; width: max-content; color: #303345; font-family: Roboto; font-size: 32px; font-weight: 500; line-height: 40px;">
                                                                    {{verifyEmailCode}}
                                                                </p>
                                                                <p style="margin: 0; padding: 0">
                                                                    <span
                                                                        style="color: #A4A5B1; font-family: Roboto; font-size: 18px; font-weight: 500; line-height: 24px;">
                                                                        {{verificationMessageText}}:
                                                                    </span>
                                                                    <span
                                                                        style="color: #6B6D80; font-family: Roboto; font-size: 18px; font-weight: 500; line-height: 24px;">
                                                                        {{verificationMessageTime}}
                                                                    </span>
                                                                </p>
                                                            </td>
                                                        </tr>
                                                    </table>
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                            </table>
                        </center>
                    </td>
                </tr>
                {{> footer}}
            </table>
        </div>
    </center>
</body>
</html>