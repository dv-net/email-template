{{> head}}
<body style="margin: 0; padding: 0; min-width: 100%; background-color: #f7f7f7">
    <!--[if (gte mso 9)|(IE)]>
    <style>body { background-color: #dde0e1 !important; }</style>
  <![endif]-->
    <center style="width: 100%; background-color: #f7f7f7; padding: 0">
        <div style="max-width: 600px; background-color: #f7f7f7">
            <table border="0" cellpadding="0" cellspacing="0" role="presentation" style="
						background-color: #f7f7f7;
						color: #000000;
						margin: 0;
						padding: 0;
						max-width: 600px;
						width: 100%;
						font-family: 'Roboto', Arial, sans-serif;
					">
                {{> header}}
                <tr>
                    <td>
                        <center>
                            <table border="0" cellpadding="0" cellspacing="0" role="presentation"
                                style="max-width: 600px; width: 100%">
                                <tr>
                                    <td
                                        style="background-color: #ffffff; border-radius: 8px 8px 0 0; padding: 32px; margin: 16px 16px 0 16px; position: relative;">
                                        <h1
                                            style="color: #000; padding: 24px 0 0 0; margin: 0; font-family: 'Roboto', Arial, sans-serif; font-size: 28px; font-weight: 700; line-height: 36px;">
                                            {{userCryptoReceipt.titleLabel}}
                                        </h1>

                                        <!-- Receipt Details -->
                                        <table border="0" cellpadding="0" cellspacing="0" role="presentation"
                                            style="width: 100%; margin: 24px 0;">
                                            <tr>
                                                <td style="padding: 12px 0; border-bottom: 1px solid #ececec;">
                                                    <table border="0" cellpadding="0" cellspacing="0"
                                                        role="presentation" style="width: 100%;">
                                                        <tr>
                                                            <td
                                                                style="color: #87898f; font-family: 'Roboto', Arial, sans-serif; font-size: 14px; font-weight: 400; line-height: 20px;">
                                                                {{userCryptoReceipt.paymentStatusLabel}}
                                                            </td>
                                                            <td
                                                                style="color: #000; font-family: 'Roboto', Arial, sans-serif; font-size: 14px; font-weight: 500; line-height: 20px; text-align: right;">
                                                                {{#isCompleted}}
                                                                <span
                                                                    style="display: inline-block; padding: 6px 12px; border-radius: 6px; font-size: 12px; font-weight: 600; color: white; background-color: #22C55E;">
                                                                    {{paymentStatusText}}
                                                                </span>
                                                                {{/isCompleted}}
                                                                {{#isPending}}
                                                                <span
                                                                    style="display: inline-block; padding: 6px 12px; border-radius: 6px; font-size: 12px; font-weight: 600; color: white; background-color: #F59E0B;">
                                                                    {{paymentStatusText}}
                                                                </span>
                                                                {{/isPending}}
                                                                {{#isFailed}}
                                                                <span
                                                                    style="display: inline-block; padding: 6px 12px; border-radius: 6px; font-size: 12px; font-weight: 600; color: white; background-color: #EF4444;">
                                                                    {{paymentStatusText}}
                                                                </span>
                                                                {{/isFailed}}
                                                            </td>
                                                        </tr>
                                                    </table>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="padding: 12px 0; border-bottom: 1px solid #ececec;">
                                                    <table border="0" cellpadding="0" cellspacing="0"
                                                        role="presentation" style="width: 100%;">
                                                        <tr>
                                                            <td
                                                                style="color: #87898f; font-family: 'Roboto', Arial, sans-serif; font-size: 14px; font-weight: 400; line-height: 20px;">
                                                                {{userCryptoReceipt.paymentIdLabel}}
                                                            </td>
                                                            <td
                                                                style="color: #000; font-family: 'Roboto', Arial, sans-serif; font-size: 14px; font-weight: 500; line-height: 20px; text-align: right;">
                                                                {{receiptId}}
                                                            </td>
                                                        </tr>
                                                    </table>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="padding: 12px 0; border-bottom: 1px solid #ececec;">
                                                    <table border="0" cellpadding="0" cellspacing="0"
                                                        role="presentation" style="width: 100%;">
                                                        <tr>
                                                            <td
                                                                style="color: #87898f; font-family: 'Roboto', Arial, sans-serif; font-size: 14px; font-weight: 400; line-height: 20px;">
                                                                {{userCryptoReceipt.paymentDateLabel}}
                                                            </td>
                                                            <td
                                                                style="color: #000; font-family: 'Roboto', Arial, sans-serif; font-size: 14px; font-weight: 500; line-height: 20px; text-align: right;">
                                                                {{paymentDate}}
                                                            </td>
                                                        </tr>
                                                    </table>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="padding: 12px 0; border-bottom: 1px solid #ececec;">
                                                    <table border="0" cellpadding="0" cellspacing="0"
                                                        role="presentation" style="width: 100%;">
                                                        <tr>
                                                            <td
                                                                style="color: #87898f; font-family: 'Roboto', Arial, sans-serif; font-size: 14px; font-weight: 400; line-height: 20px;">
                                                                {{userCryptoReceipt.paymentTypeLabel}}
                                                            </td>
                                                            <td
                                                                style="color: #000; font-family: 'Roboto', Arial, sans-serif; font-size: 14px; font-weight: 500; line-height: 20px; text-align: right;">
                                                                {{paymentTypeText}}
                                                            </td>
                                                        </tr>
                                                    </table>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="padding: 12px 0; border-bottom: 1px solid #ececec;">
                                                    <table border="0" cellpadding="0" cellspacing="0"
                                                        role="presentation" style="width: 100%;">
                                                        <tr>
                                                            <td
                                                                style="color: #87898f; font-family: 'Roboto', Arial, sans-serif; font-size: 14px; font-weight: 400; line-height: 20px;">
                                                                {{userCryptoReceipt.paymentBlockchainLabel}}
                                                            </td>
                                                            <td
                                                                style="color: #000; font-family: 'Roboto', Arial, sans-serif; font-size: 14px; font-weight: 500; line-height: 20px; text-align: right;">
                                                                <img src="https://cdn.dv.net/img/{{blockchainCurrencyId}}.png" alt="{{tokenSymbol}}" 
                                                                    style="width: 16px; height: 16px; vertical-align: middle; margin-right: 6px;" />
                                                                {{tokenSymbol}} ({{blockchainName}})
                                                            </td>
                                                        </tr>
                                                    </table>
                                                </td>
                                            </tr>
                                        </table>

                                        <!-- Amount Section -->
                                        <table border="0" cellpadding="0" cellspacing="0" role="presentation"
                                            style="width: 100%; background-color: #F8FAFC; border-radius: 12px; padding: 24px; margin: 24px 0; border: 1px solid #E2E8F0;">
                                            <tr>
                                                <td>
                                                    <table border="0" cellpadding="0" cellspacing="0"
                                                        role="presentation" style="width: 100%;">
                                                        <tr>
                                                            <td
                                                                style="color: #475569; font-family: 'Roboto', Arial, sans-serif; font-size: 16px; font-weight: 600; line-height: 24px; padding-bottom: 16px; text-align: center;">
                                                                {{userCryptoReceipt.payment.amountLabel}}
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td
                                                                style="background-color: #FFFFFF; border: 1px solid #CBD5E1; border-radius: 8px; padding: 24px; text-align: center;">
                                                                <img src="https://cdn.dv.net/img/{{blockchainCurrencyId}}.png" alt="{{tokenSymbol}}" 
                                                                    style="width: 28px; height: 28px; vertical-align: middle; margin-bottom: 12px;" />
                                                                <div
                                                                    style="color: #1E293B; font-family: 'Roboto', Arial, sans-serif; font-size: 40px; font-weight: 700; line-height: 48px; margin-bottom: 8px;">
                                                                    {{tokenAmount}} {{tokenSymbol}}
                                                                </div>
                                                                <div
                                                                    style="color: #64748B; font-family: 'Roboto', Arial, sans-serif; font-size: 18px; font-weight: 500; line-height: 24px; margin-bottom: 16px;">
                                                                    â‰ˆ ${{usdAmount}}
                                                                </div>
                                                                <div
                                                                    style="color: #64748B; font-family: 'Roboto', Arial, sans-serif; font-size: 12px; font-weight: 400; line-height: 16px; margin-bottom: 16px;">
                                                                    {{userCryptoReceipt.payment.networkLabelPrefix}} {{blockchainName}} {{userCryptoReceipt.payment.networkLabelPostfix}} 
                                                                </div>
                                                                
                                                                <!-- Exchange rate and fees breakdown -->
                                                                <div style="border-top: 1px solid #E2E8F0; padding-top: 16px;">
                                                                    <table border="0" cellpadding="0" cellspacing="0" role="presentation" style="width: 100%;">
                                                                        <tr>
                                                                            <td style="color: #64748B; font-family: 'Roboto', Arial, sans-serif; font-size: 13px; font-weight: 400; line-height: 18px; text-align: left; padding: 4px 0;">
                                                                                {{userCryptoReceipt.payment.exchange.exchangeRateLabel}}:
                                                                            </td>
                                                                            <td style="color: #1E293B; font-family: 'Roboto', Arial, sans-serif; font-size: 13px; font-weight: 500; line-height: 18px; text-align: right; padding: 4px 0;">
                                                                                1 {{tokenSymbol}} = ${{exchangeRate}}
                                                                            </td>
                                                                        </tr>
                                                                        <tr>
                                                                            <td style="color: #64748B; font-family: 'Roboto', Arial, sans-serif; font-size: 13px; font-weight: 400; line-height: 18px; text-align: left; padding: 4px 0;">
                                                                                {{userCryptoReceipt.payment.fees.network.networkFeeLabel}}:
                                                                            </td>
                                                                            <td style="color: #1E293B; font-family: 'Roboto', Arial, sans-serif; font-size: 13px; font-weight: 500; line-height: 18px; text-align: right; padding: 4px 0;">
                                                                                {{#renderNetworkFreeTierFee}}
                                                                                <span style="color: #28a745; font-weight: bold;">{{userCryptoReceipt.payment.fees.freeTierText}}</span>
                                                                                {{/renderNetworkFreeTierFee}}
                                                                                {{^renderNetworkFreeTierFee}}
                                                                                {{networkFeeAmount}} {{networkFeeCurrency}} (${{networkFeeUsd}})
                                                                                {{/renderNetworkFreeTierFee}}
                                                                            </td>
                                                                        </tr>
                                                                        <tr>
                                                                            <td style="color: #64748B; font-family: 'Roboto', Arial, sans-serif; font-size: 13px; font-weight: 400; line-height: 18px; text-align: left; padding: 4px 0;">
                                                                                {{userCryptoReceipt.payment.fees.platform.platformFeeLabel}}:
                                                                            </td>
                                                                            <td style="color: #1E293B; font-family: 'Roboto', Arial, sans-serif; font-size: 13px; font-weight: 500; line-height: 18px; text-align: right; padding: 4px 0;">
                                                                                {{#renderPlatformFreeTierFee}}
                                                                                <span style="color: #22C55E; font-weight: 600;">{{userCryptoReceipt.payment.fees.freeTierText}}</span>
                                                                                {{/renderPlatformFreeTierFee}}
                                                                                {{^renderPlatformFreeTierFee}}
                                                                                {{platformFeeAmount}} {{platformFeeCurrency}} (${{platformFeeUsd}})
                                                                                {{/renderPlatformFreeTierFee}}
                                                                            </td>
                                                                        </tr>
                                                                    </table>
                                                                </div>
                                                            </td>
                                                        </tr>
                                                    </table>
                                                </td>
                                            </tr>
                                        </table>

                                        <!-- Transaction hash section -->
                                        <table border="0" cellpadding="0" cellspacing="0" role="presentation"
											style="width: 100%; background-color: #F8FAFC; border-radius: 12px; padding: 24px; margin: 24px 0; border: 1px solid #E2E8F0;">
											<tr>
												<td>
													<table border="0" cellpadding="0" cellspacing="0"
														role="presentation" style="width: 100%;">
														<tr>
															<td
																style="color: #475569; font-family: 'Roboto', Arial, sans-serif; font-size: 16px; font-weight: 600; line-height: 24px; padding-bottom: 12px;">
																{{userCryptoReceipt.transactionHashLabel}}
															</td>
														</tr>
														<tr>
															<td
																style="background-color: #FFFFFF; border: 1px solid #CBD5E1; border-radius: 8px; padding: 16px;">
																<div
																	style="color: #1E293B; font-family: 'Courier New', monospace; font-size: 12px; font-weight: 500; line-height: 20px; word-break: break-all; letter-spacing: 0.5px;">
																	{{transactionHash}}
																</div>
															</td>
														</tr>
													</table>
												</td>
											</tr>
										</table>
                                    </td>
                                </tr>
                            </table>
                        </center>
                    </td>
                </tr>
                {{> footer}}
            </table>
        </div>
    </center>
</body>
</html>