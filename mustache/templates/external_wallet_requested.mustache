{{> head}}
<body style="margin: 0; padding: 0; min-width: 100%; background-color: #f7f7f7">
    <!--[if (gte mso 9)|(IE)]>
    <style>body { background-color: #dde0e1 !important; }</style>
  <![endif]-->
    <center style="width: 100%; background-color: #f7f7f7; padding: 0">
        <div style="max-width: 600px; background-color: #f7f7f7">
            <table border="0" cellpadding="0" cellspacing="0" role="presentation" style="
						background-color: #f7f7f7;
						color: #000000;
						margin: 0;
						padding: 0;
						max-width: 600px;
						width: 100%;
						font-family: &quot;Roboto&quot;, Arial, sans-serif, Helvetica;
					">
                {{> header}}
                <tr>
						<td>
							<center>
							   	<table border="0" cellpadding="0" cellspacing="0" role="presentation" style="max-width: 600px; width: 100%">
                                    <tr>
                                        <td style="background-color: #fff; border-radius: 12px; padding: 24px">
                                            <h1
                                                style="
                                                    color: #000;
                                                    padding: 0;
                                                    margin: 0;
                                                    font-family: Roboto;
                                                    font-size: 28px;
                                                    font-weight: 700;
                                                    line-height: 36px;
                                                "
                                            >
                                                {{emailTitle}}
                                            </h1>
                                            <p
                                                style="
                                                    color: #000;
                                                    padding: 40px 0 0 0;
                                                    margin: 0;
                                                    font-family: Roboto;
                                                    font-size: 16px;
                                                    font-weight: 700;
                                                    line-height: 24px;
                                                "
                                            >
                                                {{defaultGreeting}}
                                            </p>
                                            <p
                                                style="
                                                    color: #000;
                                                    margin: 0;
                                                    padding: 0 0 28px 0;
                                                    font-family: Roboto;
                                                    font-size: 16px;
                                                    font-weight: 400;
                                                    line-height: 24px;
                                                "
                                            >
                                                {{externalWalletRequestedMessageText}}
                                            </p>
                                            <table border="0" cellpadding="0" cellspacing="0" role="presentation" style="width: 100%">
                                                {{#wallets}}
                                                    <tr>
                                                        <td style="padding-bottom: 12px">
                                                            <table
                                                                    border="0"
                                                                    cellpadding="0"
                                                                    cellspacing="0"
                                                                    role="presentation"
                                                                    style="width: 100%; border-radius: 8px; border: 1px solid #E1E8F1; background-color: #FFF"
                                                            >
                                                                {{^showBlockchain}}
                                                                    <tr>
                                                                        <td style="padding: 12px 16px; background-color: #F7F9FB; border-bottom: 1px solid #E1E8F1; border-radius: 8px 8px 0 0;">
                                                                            <span>
                                                                                <img
                                                                                    src="https://cdn.dv.net/img/{{walletCurrency}}.png"
                                                                                    alt="Currency"
                                                                                    style="width: 20px; min-width: 20px; vertical-align: middle"
                                                                                />
                                                                                <span style="vertical-align: middle; font-weight: 500; font-size: 12px; color: #303345; padding-left: 4px;">
                                                                                    {{walletCurrencyName}}
                                                                                </span>
                                                                            </span>
                                                                        </td>
                                                                    </tr>
                                                                {{/showBlockchain}}
                                                                {{#showBlockchain}}
                                                                <tr>
                                                                    <td style="padding: 12px 16px; background-color: #F7F9FB; border-bottom: 1px solid #E1E8F1; border-radius: 8px 8px 0 0;">
                                                                        <span style="border-right: 1px solid #CDD4DD; padding-right: 12px;">
                                                                            <img
                                                                                    src="https://cdn.dv.net/img/{{walletCurrency}}.png"
                                                                                    alt="Currency"
                                                                                    style="width: 20px; min-width: 20px; vertical-align: middle"
                                                                            />
                                                                            <span style="vertical-align: middle; font-weight: 500; font-size: 12px; color: #303345; padding-left: 4px;">
                                                                                {{walletCurrencyName}}
                                                                            </span>
                                                                        </span>
                                                                        <span style="padding-left: 12px;">
                                                                            <img
                                                                                    src="https://cdn.dv.net/img/{{walletBlockchain}}.png"
                                                                                    alt="Blockchain"
                                                                                    style="width: 20px; min-width: 20px; vertical-align: middle"
                                                                            />
                                                                            <span style="vertical-align: middle; font-weight: 500; font-size: 12px; color: #303345; padding-left: 4px;">
                                                                                {{walletBlockchainName}}
                                                                            </span>
                                                                        </span>
                                                                    </td>
                                                                </tr>
                                                                {{/showBlockchain}}
                                                                <tr>
                                                                    <td style="padding: 12px 16px; color: #6B6D80; font-size: 12px; font-weight: 500; word-break: break-word">
                                                                        {{walletAddress}}
                                                                    </td>
                                                                </tr>
                                                            </table>
                                                        </td>
                                                    </tr>
                                                {{/wallets}}
                                            </table>
                                            <p
                                                style="
                                                    color: #000;
                                                    padding: 20px 0 0 0;
                                                    margin: 0;
                                                    font-family: Roboto;
                                                    font-size: 16px;
                                                    font-weight: 400;
                                                    line-height: 24px;
                                                "
                                            >
                                                {{defaultSupportActionText}}
                                            </p>
                                            <p
                                                style="
                                                    border-top: 1px solid #ececec;
                                                    color: #87898f;
                                                    padding-top: 24px;
                                                    margin: 24px 0 0;
                                                    font-family: Roboto;
                                                    font-size: 16px;
                                                    font-weight: 400;
                                                    line-height: 24px;
                                                "
                                            >
                                                {{defaultRegards}}
                                            </p>
                                            {{#notificationHash}}
                                                <div style="
                                                  color: #87898f;
                                                  padding: 24px 0 0;
                                                  margin: 0;
                                                  text-align: center;
                                                  font-family: Roboto;
                                                  font-size: 11px;
                                                  font-weight: 500;
                                                  line-height: 16px;
                                                  display: flex;
                                                  flex-wrap: wrap;
                                                  justify-content: center;
                                                  gap: 4px;
                                                ">
                                                  <span>{{defaultFooterHashText}}:</span>
                                                  <span>{{notificationHash}}</span>
                                                </div>
                                            {{/notificationHash}}
                                        </td>
                                    </tr>
                                </table>
							</center>
						</td>
					</tr>
                {{> footer}}
            </table>
        </div>
    </center>
</body>
</html>